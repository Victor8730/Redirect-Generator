{% extends "template.twig" %}
{% block content %}
    <div class="col-md-12 order-md-2">
        <div class="card text-center">
            <form action="/main/generate" method="post" class="my-2 form-redirect">
                <div class="input-group px-4 py-2">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-share-alt pr-2" aria-hidden="true"></i>Sitemap url</span>
                    </div>
                    <input type="text" name="url-data" id="url-data" class="form-control" placeholder="Url with xml data" aria-describedby="url-data">
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 py-2">
                        <button type="submit" class="btn btn-success tooltip-show" title="Creating kml file">Generate redirect</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}